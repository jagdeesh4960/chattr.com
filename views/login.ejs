<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Login | Chattr</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-black text-white min-h-screen flex flex-col">

  <!-- Brand casual mention -->
  <div class="text-center py-6">
    <h1 class="text-3xl font-extrabold text-pink-600 tracking-wide">Chattr</h1>
    <p class="text-gray-400 text-sm">Welcome back! Log in to share your thoughts.</p>
  </div>

  <!-- Login form -->
  <div class="flex-grow flex justify-center items-center px-4">
    <form 
      action="/login" 
      method="POST" 
      class="w-full max-w-md bg-pink-100 text-black p-6 rounded-lg shadow-lg space-y-5"
    >
      <h2 class="text-2xl font-bold text-pink-600 text-center">Login</h2>

      <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
        <ul class="bg-red-100 text-red-600 px-4 py-2 rounded text-sm">
          <% errors.forEach(err => { %>
            <li><%= err.msg %></li>
          <% }) %>
        </ul>
      <% } %>

      <div>
        <label class="block mb-1 font-medium">Email</label>
        <input 
          type="email" 
          name="email" 
          required 
          class="w-full px-3 py-2 bg-white rounded focus:outline-none focus:ring-2 focus:ring-pink-500"
        />
      </div>

      <div>
        <label class="block mb-1 font-medium">Password</label>
        <input 
          type="password" 
          name="password" 
          required 
          class="w-full px-3 py-2 bg-white rounded focus:outline-none focus:ring-2 focus:ring-pink-500"
        />
      </div>

      <button 
        type="submit" 
        class="w-full bg-pink-600 text-white py-2 rounded hover:bg-pink-700 transition duration-200"
      >
        Log In
      </button>

      <p class="text-sm text-center text-gray-600 mt-2">
        Don’t have an account? 
        <a href="/register" class="text-pink-600 font-semibold hover:underline">Sign Up</a>
      </p>
    </form>
  </div>

  <!-- Footer -->
  <footer class="bg-pink-600 text-center text-white text-sm py-3 mt-6">
    © 2025 Chattr — Talk in threads. Share in snaps.
  </footer>

</body>
</html>
